<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main_page"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6.7"
    tools:context=".MainActivity">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_weight="0.5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:text="@string/it_s_time_to_practice"
        android:textStyle="normal"
        android:textColor="@color/main_page_button"
        android:fontFamily="monospace"
        android:textAppearance="?android:textAppearanceLarge"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:background="@drawable/main_image"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/main"
        tools:srcCompat="@tools:sample/avatars"/>

    <Button
        android:id="@+id/signUp"
        android:layout_weight="0.6"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:text="@string/sign_up"
        android:textStyle="normal"
        android:elevation="3dp"
        android:textColor="@color/main_page"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="30dp"
        android:background="@drawable/front_button_shape"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_weight="0.6"
        android:id="@+id/alreayAccount"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:text="@string/i_already_have_an_acciunt"
        android:textStyle="normal"
        android:textColor="@color/main_page"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="10dp"
        android:background="@drawable/front_button_shape"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/guest"
        android:layout_weight="0.6"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:text="@string/login_as_guest"
        android:textStyle="normal"
        android:textColor="@color/main_page_button"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="10dp"
        android:background="@drawable/front_button_shap2"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>