<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page"
    android:orientation="vertical"
    tools:context=".Mainmenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="250dp"
                android:src="@drawable/progress" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:lines="2"
            android:gravity="center_vertical"
            android:minLines="2"
            android:singleLine="false"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:text="@string/exercise_session_ngo_and_get_your_freedom"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:src="@drawable/ic_directions_walk_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:lines="2"
            android:gravity="center_vertical"
            android:minLines="2"
            android:singleLine="false"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:text="@string/meditation_text"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:src="@drawable/meditation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="285dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:background="@drawable/image_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/main"
            tools:srcCompat="@tools:sample/avatars"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/main_page_items">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/main_page_button"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:text="@string/_7_techniques"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:background="@drawable/main_page_items">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/main_page_button"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:text="@string/connection"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>