<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main_page"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".WhatsappGroups">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/backtowhatsappicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_blue_24dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/whatsapp_groups"
                android:textColor="@color/main_page_button"
                android:textAppearance="?android:textAppearanceMedium"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <TextView
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:text="@string/stuttering_as_tms_mbs"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/whatsapp"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <TextView
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:text="@string/stop_holding_back"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/whatsapp"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <TextView
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:text="@string/stammering_management"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/whatsapp"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <TextView
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:text="@string/shb_speech_practice"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/whatsapp"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/group5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <TextView
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:text="@string/freedom_from_stammering"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/whatsapp"/>

    </LinearLayout>

</LinearLayout>