<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page"
    android:orientation="vertical"
    tools:context=".Connections">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/backmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_blue_24dp"
                android:contentDescription="TODO" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:fontFamily="monospace"
                android:text="@string/connection"
                android:textColor="@color/main_page_button"
                android:textSize="22sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="22sp"
            android:fontFamily="monospace"
            android:text="@string/doctor"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="57dp"
            android:src="@drawable/doctor"
            android:contentDescription="TODO" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/main_page_items"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_page_button"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="22sp"
            android:fontFamily="monospace"
            android:text="@string/communities"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="125dp"
            android:src="@drawable/group"
            android:contentDescription="TODO" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:visibility="invisible"
        android:scaleType="center"
        app:backgroundTint="@color/main_page_item"
        app:elevation="6dp"
        android:layout_marginBottom="10dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/main_page_button"
        android:src="@drawable/pinterest"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:visibility="invisible"
        android:scaleType="center"
        app:backgroundTint="@color/main_page_item"
        app:elevation="6dp"
        android:layout_marginBottom="10dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/main_page_button"
        android:src="@drawable/tweeter"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:scaleType="center"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:visibility="invisible"
        app:backgroundTint="@color/main_page_item"
        app:elevation="6dp"
        android:layout_marginBottom="10dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/main_page_button"
        android:src="@drawable/whatsapp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:elevation="6dp"
        android:layout_marginBottom="10dp"
        app:rippleColor="@color/main_page_button"
        app:backgroundTint="@color/main_page_item"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/face" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:elevation="6dp"
        app:rippleColor="@color/main_page_item"
        app:backgroundTint="@color/main_page_button"
        app:pressedTranslationZ="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/network" />

</LinearLayout>