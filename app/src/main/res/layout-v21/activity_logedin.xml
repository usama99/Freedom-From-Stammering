<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".logedin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_vertical">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:clickable="true"
            android:background="@drawable/rippleit"
            android:src="@drawable/ic_arrow_back_black_24dp" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="105dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:text="@string/log_in"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextAppearance="@style/CounterText"
        app:hintTextAppearance="@style/HintText">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:inputType="textEmailAddress"
            android:fontFamily="monospace"
            android:textAppearance="?android:textAppearanceSmall"
            android:hint="Email address" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextAppearance="@style/CounterText"
        app:hintTextAppearance="@style/HintText"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:inputType="textPassword"
            android:fontFamily="monospace"
            android:textAppearance="?android:textAppearanceSmall"
            android:hint="Password (8+ characters)" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="monospace"
        android:background="@drawable/rippleit"
        android:text="@string/forget_password"
        android:layout_marginStart="35dp"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/signin"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="@string/log_in"
        android:textStyle="normal"
        android:textColor="@color/background"
        android:fontFamily="monospace"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="50dp"
        android:background="@drawable/front_button_shape"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="monospace"
        android:text="@string/or"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/signinfb"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="@string/log_in_with_facebook"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:textColor="@color/background"
        android:fontFamily="monospace"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="20dp"
        android:background="@drawable/facebook_login"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/signingoogle"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="@string/log_in_with_google"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:textColor="@color/background"
        android:fontFamily="monospace"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_google"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>